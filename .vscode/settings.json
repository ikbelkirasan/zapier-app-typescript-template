{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "lib": true,
    "build": true
  },
  "jest.autoEnable": true,
  "jest.enableInlineErrorMessages": true,
  "jest.enableCodeLens": true,
  "jest.debugCodeLens.showWhenTestStateIn": ["pass", "skip", "fail", "unknown"],
  "jest.runAllTestsFirst": true
}
